.container {
  padding: 24rpx;
}

.header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.subtitle {
  font-size: 24rpx;
  color: #999999;
}

.member-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 0 24rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name-row {
  display: flex;
  align-items: center;
}

.member-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.self-tag {
  margin-left: 12rpx;
  font-size: 22rpx;
  color: #ffffff;
  background-color: #4CAF50;
  border-radius: 8rpx;
  padding: 2rpx 8rpx;
}

.member-role {
  font-size: 22rpx;
  color: #4CAF50;
  margin-top: 6rpx;
}

.member-joined {
  font-size: 22rpx;
  color: #999999;
  margin-top: 6rpx;
}

.member-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.action-btn {
  font-size: 22rpx;
}

.action-btn.danger {
  color: #f44336;
}

.empty {
  padding: 80rpx 20rpx;
  text-align: center;
  color: #999999;
}

.empty-text {
  font-size: 26rpx;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

.modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  z-index: 1000;
}

.modal-content {
  padding: 24rpx;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 500;
}

.modal-close {
  font-size: 32rpx;
  color: #999999;
}

.modal-body {
  margin-bottom: 24rpx;
}

.modal-input {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  border-radius: 999rpx;
}

.btn-primary {
  background-color: #4CAF50;
  color: #ffffff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333333;
}
