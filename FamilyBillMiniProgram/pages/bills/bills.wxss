/* pages/bills/bills.wxss */

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  border-radius: 8rpx;
}

.filter-item:active {
  background-color: #f8f8f8;
}

.filter-text {
  font-size: 26rpx;
  color: #333333;
  margin-right: 8rpx;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999999;
}

/* 家庭选择器 */
.family-selector {
  margin-bottom: 20rpx;
}

.family-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  background-color: #f8f8f8;
}

.family-label {
  font-size: 24rpx;
  color: #999999;
}

.family-name {
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  color: #333333;
  margin-right: 8rpx;
}

.family-arrow {
  font-size: 20rpx;
  color: #999999;
}

/* 月度统计 */
.month-stats {
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
}

/* 账单列表 */
.bills-container {
  flex: 1;
}

.bill-group {
  margin-bottom: 30rpx;
}

.group-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx 12rpx 0 0;
}

.group-date {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.group-amount {
  font-size: 28rpx;
  font-weight: 600;
}

.bill-list {
  background-color: #ffffff;
  border-radius: 0 0 12rpx 12rpx;
  overflow: hidden;
}

.bill-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.bill-item:last-child {
  border-bottom: none;
}

.bill-item:active {
  background-color: #f8f8f8;
}

.bill-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.bill-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.bill-category {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.bill-description {
  font-size: 24rpx;
  color: #666666;
}

.bill-amount {
  text-align: right;
  margin-right: 40rpx;
}

.bill-actions {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
}

.action-icon {
  font-size: 32rpx;
  color: #cccccc;
  transform: rotate(90deg);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #4CAF50;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
}

/* 弹窗样式 */
.date-picker-modal,
.category-filter-modal,
.type-filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date-picker-modal .modal-content,
.category-filter-modal .modal-content,
.type-filter-modal .modal-content {
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

/* 日期选择器 */
.date-picker {
  height: 400rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 分类列表 */
.category-list,
.type-list {
  max-height: 60vh;
  overflow-y: auto;
}

.category-item,
.type-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-item:last-child,
.type-item:last-child {
  border-bottom: none;
}

.category-item.selected,
.type-item.selected {
  background-color: #e8f5e8;
  color: #4CAF50;
}

.category-item .category-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  margin-right: 20rpx;
}

.category-name,
.type-name {
  font-size: 28rpx;
  color: #333333;
}

/* 账单操作弹窗 */
.bill-actions-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.actions-content {
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  padding: 20rpx;
  position: relative;
  z-index: 1;
}

.action-item {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 10rpx;
  border-radius: 12rpx;
}

.action-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.action-item:active {
  background-color: #f8f8f8;
}

.action-item.danger {
  color: #f44336;
}

.action-text {
  font-size: 32rpx;
  font-weight: 500;
}