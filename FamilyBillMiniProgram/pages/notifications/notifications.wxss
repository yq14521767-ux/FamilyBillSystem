/* notifications header */
.notifications-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  gap: 16rpx; /* 更稳健的间隙 */
}

/* 左侧 tabs 容器 */
.filter-tabs {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1 1 auto;   /* 可收缩，给右侧按钮留空间 */
  min-width: 0;     /* 允许子元素溢出时收缩（非常重要） */
  white-space: nowrap; /* 一行显示，不换行 */
  overflow: hidden; /* 避免溢出撑高 header */
}

/* 单个 tab */
.filter-tab {
  padding: 8rpx 18rpx;     /* 缩小一点内边距 */
  border-radius: 999rpx;
  background-color: #f5f5f5;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;         /* 不被压扁为 0 高 */
  max-width: 100%;        /* 防止极端情况 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* tab 内的文字 */
.filter-tab text {
  font-size: 24rpx;  /* 稍微缩小 */
  color: #666666;
  line-height: 1;
}

/* active 状态 */
.filter-tab.active {
  background-color: #e8f5e8;
}
.filter-tab.active text {
  color: #4CAF50;
}

/* 红色角标 */
.badge {
  min-width: 28rpx;
  height: 28rpx;
  padding: 0 8rpx;
  border-radius: 999rpx;
  background-color: #f44336;
  color: #ffffff;
  font-size: 20rpx;
  text-align: center;
  margin-left: 8rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

/* 右侧“全部标记已读”按钮 */
.mark-all-btn {
  font-size: 22rpx;        /* 稍小 */
  padding: 8rpx 18rpx;     /* 更紧凑 */
  border-radius: 999rpx;
  background-color: #4CAF50;
  color: #ffffff;
  flex: 0 0 auto;          /* 不拉伸，也不挤压其它元素 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 40%;          /* 防止占太多空间（可调） */
}

/* 禁用态 */
.mark-all-btn[disabled] {
  background-color: #cccccc;
}

/* 保持其他样式不变（保留你已有的样式） */
.empty-state { padding: 80rpx 30rpx; text-align: center; }
.empty-text { font-size: 26rpx; color: #999999; }
.notification-list { margin-top: 10rpx; }
.notification-item { padding: 24rpx 30rpx; border-bottom: 1rpx solid #f0f0f0; display: flex; align-items: flex-start; justify-content: space-between; }
.notification-item.unread { background-color: #f9fff9; }
.notification-main { flex: 1; margin-right: 20rpx; min-width: 0; }
.notification-title-row { display: flex; align-items: center; margin-bottom: 8rpx; }
.notification-title { font-size: 28rpx; color: #333333; font-weight: 500; }
.status-dot { width: 12rpx; height: 12rpx; border-radius: 50%; background-color: #4CAF50; margin-left: 8rpx; }
.notification-message { font-size: 24rpx; color: #666666; }
.notification-meta { min-width: 140rpx; text-align: right; }
.notification-time { font-size: 22rpx; color: #999999; }
.load-more { padding: 20rpx 0; text-align: center; }
.load-more-text { font-size: 24rpx; color: #4CAF50; }
