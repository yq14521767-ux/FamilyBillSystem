/* pages/add-bill/add-bill.wxss */

/* 类型切换 */
.type-tabs {
  display: flex;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item.active.expense {
  color: #f44336;
}

.tab-item.active.income {
  color: #4CAF50;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 金额输入 */
.amount-section {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.amount-display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 35rpx;
}

.currency-symbol {
  font-size: 48rpx;
  color: #666666;
  margin-right: 10rpx;
}

.amount-input {
  font-size: 56rpx;
  font-weight: 300;
  color: #333333;
  text-align: center;
  width: 70%;
  height: 50px;
}

/* 自定义键盘 */
.amount-keyboard {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 0 -20rpx;
}

.keyboard-row {
  display: flex;
  margin-bottom: 20rpx;
}

.keyboard-row:last-child {
  margin-bottom: 0;
}

.key-item {
  flex: 1;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.key-item:active {
  background-color: #f0f0f0;
}

.delete-key {
  background-color: #f44336;
  color: #ffffff;
}

/* 表单部分 */
.form-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 0;
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  width: 120rpx;
  flex-shrink: 0;
}

.form-value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: left;
}

.form-textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  min-height: 100rpx;
  text-align: left;
}

.placeholder {
  color: #999999;
}

.arrow {
  color: #cccccc;
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 分类显示 */
.category-display {
  display: flex;
  align-items: center;
}

.category-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  margin-right: 16rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333333;
}

/* 提交按钮 */
.submit-section {
  padding: 0 20rpx 40rpx;
}

.submit-btn {
  width: 100%;
}

/* 分类选择弹窗 */
.category-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.category-modal .modal-content {
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.category-tabs {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-tab {
  flex: 1;
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #666666;
  border-bottom: 4rpx solid transparent;
}

.category-tab.active {
  color: #4CAF50;
  border-bottom-color: #4CAF50;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: transform 0.15s ease-out, background-color 0.15s ease-out;
}

.category-item:active {
  background-color: #f8f8f8;
  transform: scale(0.9);
}

.category-item .category-icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.category-item .category-name {
  font-size: 24rpx;
  color: #333333;
}

.add-category {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 20rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 12rpx;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.add-text {
  font-size: 24rpx;
  color: #666666;
}

/* 添加分类表单 */
.add-category-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-category-modal .modal-content {
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  position: relative;
  z-index: 1;
}

.color-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.color-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  position: relative;
}

.color-item.selected {
  border-color: #333333;
}

.color-item.selected::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}