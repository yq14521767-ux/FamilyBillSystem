/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.login-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.login-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.login-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  width: 100%;
  max-width: 600rpx;
}

.login-form {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.login-btn {
  width: 100%;
  margin-top: 40rpx;
}

.login-divider {
  text-align: center;
  margin: 40rpx 0;
  position: relative;
}

.login-divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: #e0e0e0;
}

.divider-text {
  background-color: #ffffff;
  color: #999999;
  font-size: 24rpx;
  padding: 0 20rpx;
  position: relative;
  z-index: 1;
}

.wechat-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.login-footer {
  text-align: center;
  margin-top: 40rpx;
}

.register-link {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  text-decoration: underline;
}

/* 注册弹窗样式 */
.register-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
}

.modal-body {
  padding: 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.modal-footer .btn {
  flex: 1;
}

/* 验证码输入框样式 */
.code-input-wrapper {
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  flex-shrink: 0;
  min-width: 160rpx;
  padding: 20rpx 20rpx;
  font-size: 24rpx;
}