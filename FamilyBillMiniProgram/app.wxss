/* ==================== 全局弹窗样式 ==================== */

/* 遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.modal-mask.show {
  opacity: 1;
  pointer-events: auto;
}

/* 弹窗容器 */
.modal-container {
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 24rpx;
  width: 85%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: translateY(50rpx);
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.modal-mask.show .modal-container {
  transform: translateY(0);
  opacity: 1;
}

/* 弹窗头部 */
.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin: 0;
  line-height: 1.4;
}

.modal-subtitle {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 弹窗内容 */
.modal-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.modal-button {
  flex: 1;
  background: none;
  border: none;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  position: relative;
  border-radius: 3rpx;
  transition: all 0.2s ease;
  margin: 0 10rpx;
}

.modal-button:first-child {
  margin-left: 0;
}

.modal-button:last-child {
  margin-right: 0;
}

.modal-button.primary {
  background-color: #4CAF50;
  color: #ffffff;
}

.modal-button.primary:active {
  background-color: #45a049;
  transform: translateY(2rpx);
}

.modal-button.default {
  background-color: #f0f0f0;
  color: #666666;
}

.modal-button.default:active {
  background-color: #e0e0e0;
  transform: translateY(2rpx);
}

.modal-button.danger {
  background-color: #f44336;
  color: #ffffff;
}

.modal-button.danger:active {
  background-color: #da190b;
  transform: translateY(2rpx);
}

/* 关闭按钮 */
.modal-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
  z-index: 10;
  transition: all 0.2s ease;
}

.modal-close:active {
  background-color: #e0e0e0;
  transform: rotate(90deg) scale(0.9);
}

/* 输入框组 */
.modal-input-group {
  margin-bottom: 30rpx;
}

.modal-label {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.modal-input:focus {
  border-color: #4CAF50;
  background-color: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.2);
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  margin: 20rpx 0;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid #e0e0e0;
}

.radio-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666666;
  position: relative;
  transition: all 0.2s ease;
}

.radio-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.radio-item.selected {
  background-color: #4CAF50;
  color: #ffffff;
  font-weight: 500;
}

/* 提示信息 */
.modal-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  line-height: 1.4;
}

.modal-tip.error {
  color: #f44336;
}

.modal-tip.success {
  color: #4CAF50;
}

/* 加载中状态 */
.modal-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media (min-width: 600rpx) {
  .modal-container {
    width: 75%;
  }
}

